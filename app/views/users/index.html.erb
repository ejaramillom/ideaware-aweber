<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Usuarios</h1>
      <table class="table">
        <tr>
          <th>Email</th>
          <th>Nombre</th>
          <th>Telefono</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.phone %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Nuevo Usuario</h1>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.text_field :email, class: "form-control input-lg", placeholder: "Ingresa el email del usuario" %>
        </div>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del usuario" %>
        </div>
        <div class="form-group">
          <%= f.text_field :phone, class: "form-control input-lg", placeholder: "Ingresa el telefono del usuario" %>
        </div>
        <div class="form-check">
          <label class="form-check-label" for="flexCheckDefault">
            Recibir correos de la app
          </label>
          <%= check_box_tag :sendinformationstatus, class: "form-control input-lg", type:"checkbox", value: false %>
        </div>
        <div>
          <%= f.submit "Almacenar Usuario", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
